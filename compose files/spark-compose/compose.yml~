services:
  spark-master:
    image: bitnami/spark:3.5.1
    ports:
      - "9090:8080"
      - "7077:7077"
      - "4040:4040"
      - "38002:38002"
    networks:
      - fqe-network
    volumes:
      - ./postgresql-42.7.3.jar:/opt/bitnami/spark/jars/postgresql-42.7.3.jar
      - ./mariadb-java-client-3.3.3.jar:/opt/bitnami/spark/jars/mariadb-java-client-3.3.3.jar
      - ./mysql-connector-j-8.3.0.jar:/opt/bitnami/spark/jars/mysql-connector-j-8.3.0.jar
      - ./mysql-connector-java-5.1.49.jar:/opt/bitnami/spark/jars/mysql-connector-java-5.1.49.jar
    environment:
      - SPARK_LOCAL_IP=spark-master
      - SPARK_WORKLOAD=master
      - SPARK_RPC_AUTHENTICATION_ENABLED=no
      - SPARK_RPC_ENCRYPTION_ENABLED=no
      - SPARK_LOCAL_STORAGE_ENCRYPTION_ENABLED=no
      - SPARK_SSL_ENABLED=no
      - RUNNING_IN_DOCKER=true

  spark-worker:
    image: bitnami/spark:3.5.1
    ports:
      - "8281-8290:8081"
      - "7000-7010:7000"
    networks:
      - fqe-network
    depends_on:
      - spark-master
    environment:
      - SPARK_MODE=worker
      - SPARK_MASTER_URL=spark://spark-master:7077
      - SPARK_WORKER_MEMORY=16G
      - SPARK_WORKER_CORES=4
      - SPARK_RPC_AUTHENTICATION_ENABLED=no
      - SPARK_RPC_ENCRYPTION_ENABLED=no
      - SPARK_LOCAL_STORAGE_ENCRYPTION_ENABLED=no
      - SPARK_SSL_ENABLED=no
      - RUNNING_IN_DOCKER=true
    volumes:
      - ./postgresql-42.7.3.jar:/opt/bitnami/spark/jars/postgresql-42.7.3.jar
      - ./mariadb-java-client-3.3.3.jar:/opt/bitnami/spark/jars/mariadb-java-client-3.3.3.jar
      - ./mysql-connector-j-8.3.0.jar:/opt/bitnami/spark/jars/mysql-connector-j-8.3.0.jar
      - ./mysql-connector-java-5.1.49.jar:/opt/bitnami/spark/jars/mysql-connector-java-5.1.49.jar
      - ./spark-defaults.conf:/opt/bitnami/spark/conf/spark-defaults.conf

  spark-thriftserver:
    image: bitnami/spark:3.5.1
    depends_on:
      - spark-master
    networks:
      - fqe-network
    environment:
      - SPARK_MASTER_URL=spark://spark-master:7077
      - RUNNING_IN_DOCKER=true
      - SPARK_RPC_AUTHENTICATION_ENABLED=no
      - SPARK_RPC_ENCRYPTION_ENABLED=no
      - SPARK_LOCAL_STORAGE_ENCRYPTION_ENABLED=no
      - SPARK_SSL_ENABLED=no
    command: >
      /opt/bitnami/spark/sbin/start-thriftserver.sh
      --master spark://spark-master:7077
    ports:
      - "10000:10000"
      - "4045:4040"
    volumes:
      - ./postgresql-42.7.3.jar:/opt/bitnami/spark/jars/postgresql-42.7.3.jar
      - ./mariadb-java-client-3.3.3.jar:/opt/bitnami/spark/jars/mariadb-java-client-3.3.3.jar
      - ./mysql-connector-j-8.3.0.jar:/opt/bitnami/spark/jars/mysql-connector-j-8.3.0.jar
      - ./mysql-connector-java-5.1.49.jar:/opt/bitnami/spark/jars/mysql-connector-java-5.1.49.jar
      - ./spark-defaults.conf:/opt/bitnami/spark/conf/spark-defaults.conf

networks:
  fqe-network:
    name: fqe-network
    external: true
